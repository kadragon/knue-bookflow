{
  "name": "knue-bookflow",
  "version": "0.1.0",
  "description": "Cloudflare Workers-based automatic book renewal system for KNUE library",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "vite --config frontend/vite.config.mts",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:run": "mkdir -p frontend/dist && vitest run",
    "ci:prepare": "npm run build:frontend",
    "build": "wrangler build",
    "build:frontend": "vite build --config frontend/vite.config.mts",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [
    "cloudflare-workers",
    "library",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/vitest-pool-workers": "^0.10.11",
    "@cloudflare/workers-types": "^4.20251205.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "vite": "^7.2.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.50.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.5",
    "@tanstack/react-query": "^5.90.12",
    "clsx": "^2.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6"
  }
}
