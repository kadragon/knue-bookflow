{
  "name": "knue-bookflow",
  "version": "0.1.0",
  "description": "Cloudflare Workers-based automatic book renewal system for KNUE library",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "vite --config frontend/vite.config.mts",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "build:frontend": "vite build --config frontend/vite.config.mts",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [
    "cloudflare-workers",
    "library",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@biomejs/biome": "^2.3.7",
    "@cloudflare/vitest-pool-workers": "^0.10.10",
    "@cloudflare/workers-types": "^4.20251119.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "vite": "^5.4.10",
    "vitest": "^3.2.4",
    "wrangler": "^4.50.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.7",
    "clsx": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
