{
  "name": "knue-bookflow-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd packages/backend run dev",
    "dev:frontend": "bun --cwd packages/frontend run dev",
    "build:frontend": "bun --cwd packages/frontend run build",
    "build:backend": "bun --cwd packages/backend run build",
    "deploy": "bun --cwd packages/backend run deploy",
    "db:migrate": "bun --cwd packages/backend run db:migrate",
    "build": "bun --cwd packages/shared run build && bun --cwd packages/frontend run build && bun --cwd packages/backend run build",
    "test": "vitest --run --configLoader runner",
    "lint": "biome check .",
    "typecheck": "tsc --build",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "simple-git-hooks"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,mts,cts,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck && bun run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
